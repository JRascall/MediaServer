{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dest",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@types": ["./src/types"],
      "@flv": ["./src/FLV"],
      "@rtmp": ["./src/RTMP"],
      "@transmuxing": ["./src/Transmuxing"],
      "@http": ["./src/HTTP"],
      "@storage": ["./src/Storage"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.pem", "**/*.csr", "**/*.pem"]
}
